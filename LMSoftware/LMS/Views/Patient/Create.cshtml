@using LMS.ViewModels
@model PatientViewModel


<div class="row" style="padding-bottom:50px">
    @*<h3 class="text-center">Laboratory Request Form</h3>*@
<div asp-validation-summary="All"></div>
<form asp-controller="Patient" asp-action="Create" method="post" class="form-horizontal" role="form">
    
    <fieldset class="text-left">
        <legend>Patients Details</legend>
        <div class="form-group">
            <div class="col-md-8">
                <label asp-for="Fullname" class="col-md-2 control-label">Fullname </label>

                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label asp-for="Age" class="col-md-2 control-label">Age </label>

                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-8">
                <label asp-for="PhysicianId" class="col-md-8 control-label">Physician </label>
                <select asp-for="PhysicianId" class="form-control" asp-items="@(new SelectList(Model.docL,"Value", "Text"))">
                </select>
                <span asp-validation-for="PhysicianId" class="text-danger"></span>
            </div>
        </div>

        @*<div class="form-group">
            <div class="col-md-8">
                <label asp-for="Department" class="col-md-8 control-label">Department</label>

                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-8">
                <label asp-for="ClinicalDiagnosis" class="col-md-8 control-label">Clinical diagnosis</label>

                <input asp-for="ClinicalDiagnosis" class="form-control" />
                <span asp-validation-for="ClinicalDiagnosis" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-8">
                <label asp-for="DateOfRequest" class="col-md-8 control-label">Date of request</label>

                <input asp-for="DateOfRequest" class="form-control" />
                <span asp-validation-for="DateOfRequest" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-8">
                <label asp-for="ClinicNo" class="col-md-8 control-label">Lab Number</label>

                <input asp-for="ClinicNo" class="form-control" />
                <span asp-validation-for="ClinicNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <label asp-for="TestId" class="col-md-8 control-label">Test Required </label>
                <select asp-for="TestId" class="form-control" asp-items="@(new SelectList(Model.tesL,"Value", "Text"))">
                </select>
                <span asp-validation-for="TestId" class="text-danger"></span>
            </div>
        </div>


    </fieldset>

    
    <div class="form-group">
        <div class="btn-group col-md-offset-2 col-md-4">
            <input class="btn btn-success" type="submit" value="Submit Form" />
        </div>
    </div>
</form>

</div>
