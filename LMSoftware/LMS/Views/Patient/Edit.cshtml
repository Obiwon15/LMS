@{
    ViewBag.Title = "Edit";
}
@using LMS.ViewModels
@model PatientViewModel


<div class="row orderForm" style="padding-bottom:50px">
    @*<h3 class="text-center">Laboratory Request Form</h3>*@
    <div asp-validation-summary="All"></div>
    <form asp-controller="Patient" asp-action="Edit" method="post" class="form-horizontal" role="form">

        <fieldset class="text-left">
            <legend>Patients Details</legend>
            <div class="form-group">
                <label asp-for="Fullname" class="col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Fullname" class="form-control" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Age" class="col-md-2 control-label">Age:</label>
                <div class="col-md-8">
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Department" class="col-md-8 control-label">Department:</label>
                <div class="col-md-8">
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ClinicalDiagnosis" class="col-md-8 control-label">Clinical diagnosis:</label>
                <div class="col-md-8">
                    <input asp-for="ClinicalDiagnosis" class="form-control" />
                    <span asp-validation-for="ClinicalDiagnosis" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Physician" class="col-md-8 control-label">Physician:</label>
                <div class="col-md-8">
                    <input asp-for="Physician" class="form-control" />
                    <span asp-validation-for="Physician" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DateOfRequest" class="col-md-8 control-label">Date of request:</label>
                <div class="col-md-8">
                    <input asp-for="DateOfRequest" class="form-control" />
                    <span asp-validation-for="DateOfRequest" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ClinicNo" class="col-md-8 control-label">Lab Number:</label>
                <div class="col-md-8">
                    <input asp-for="ClinicNo" class="form-control" />
                    <span asp-validation-for="ClinicNo" class="text-danger"></span>
                </div>
            </div>

            @*<div class="form-group">
                <label asp-for="ClinicalChemistry" class="col-md-8 control-label">Clinical chemistry:</label>
                <div class="col-md-8">
                    <input asp-for="ClinicalChemistry" class="form-control" />
                    <span asp-validation-for="ClinicalChemistry" class="text-danger"></span>
                </div>
            </div>*@
        </fieldset>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-4">
                <input class="btn btn-success" type="submit" value="Submit Form" />
            </div>
        </div>

    </form>
</div>
