@{
    ViewBag.Title = "Add new Test";
}
@using LMS.ViewModels
@model DoctorTestViewModel


<div class="row" style="padding-bottom:50px">
    @*<h3 class="text-center">Laboratory Request Form</h3>*@
    <div asp-validation-summary="All"></div>
    <form asp-controller="Test" asp-action="CreateTest" method="post" class="form-horizontal" role="form">

        <fieldset>
            <legend>Add a new Test</legend>

            <div class="form-group">
              
                <div class="col-md-8">
                    <label asp-for="TestName" class="col-md-8 control-label">Test Name:</label>
                    <input asp-for="TestName" class="form-control" list="Clinic" />
                    @*<datalist asp-for="ClinicalChemistry" id="Clinic">
            <option>HDL</option>
            <option>Cocaine</option>

        </datalist>*@
                    <span asp-validation-for="TestName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
               
                <div class="col-md-8">
                    <label asp-for="DepartmentId" class="col-md-8 control-label">Department:</label>
                  <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(Model.deptL,"Value", "Text"))">

                  </select>
                    @*<datalist asp-for="ClinicalChemistry" id="Clinic">
            <option>HDL</option>
            <option>Cocaine</option>

        </datalist>*@
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>

        </fieldset>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-4">
                <input class="btn btn-success" type="submit" value="Submit Form" />
            </div>
        </div>
    </form>

</div>